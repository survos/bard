{% extends 'base.html.twig' %}

{% block title %}Shakespeare Plays{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <table id="works_table" class="works-datatable table table-striped">
        <thead>
        <tr>
            <th>Fountain</th>
            <th>Title</th>
        </tr>
        </thead>
        <tbody>
        {% for work in works %}
            <tr>
                <td><a target="_blank" href="{{ path('work_fountain', work.rp) }}"><span class="fas fa-pen-fancy"></span> </a>
                </td>
                <td>
                    <a href="{{ path('work_show', work.rp) }}">
                        {{ work.title }}
                    </a>
                </td>
            </tr>

        {% endfor %}
        </tbody>
    </table>

{% endblock %}
