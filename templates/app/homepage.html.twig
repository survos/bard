{% extends 'base.html.twig' %}

{% block page_title %}Shakespeare{% endblock %}
{% block body %}


    {# ... box widget with defaults ... #}
    {% embed '@AdminLTE/Widgets/box-widget.html.twig' %}

        {% import '@AdminLTE/Macros/buttons.html.twig'  as btn %}
        {% block box_title %}Welcome!{% endblock %}
        {% block box_body %}
            <div class="callout callout-info">
                Welcome to the Survos Base Bunde.

                Next steps:
                <ul>
                    <li>Create the sidebar menu</li>
                    <li>Create the Login/Register</li>
                    <li><code>bin/console make:controller AppController</code>, then set the route app_homepage.  That will get rid of this page. </li>
                    <li><code>bin/console survos:make:entity</code> (@todo).  For now, use make:entity, then extend SurvosBaseEntity and set the uniqueID </li>
                </ul>
            </div>
        {% endblock %}

        {% block box_footer %}
            <div class="pull-right">

                {{ btn.link_button('Home', path('app_homepage')) }}
                {{ btn.link_button('Login',path('app_login') ) }}
            </div>
        {% endblock %}
    {% endembed %}


{% endblock %}

{% block page_content %}

    <div class="row">
        <div class="col-md-6">
            {# ... box widget with defaults ... #}
            {% embed '@SurvosBase/Widgets/box-widget.html.twig' %}

                {% import '@SurvosBase/Macros/buttons.html.twig'  as btn %}
                {% block box_title %}Shakespeare's Works and Characters{% endblock %}
                {% block box_body %}
                    <div class="callout callout-info">
                        {{ 'bard.intro'|trans|markdown }}
                    </div>
                {% endblock %}
                {% block box_footer %}
                    <div class="pull-left">
                        Data from <a target="_blank" href="http://opensourceshakespeare.com/">opensourceshakespeare.com</a>
                    </div>

                    <div class="pull-right">
                        {{ btn.link_button('Characters', path('character_index'), 'floppy') }}
                        {{ btn.link_button('Works', path('work_index'), 'floppy') }}
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
        <div class="col-md-6">
            {# ... box widget with some options ... #}
            {% embed '@SurvosBase/Widgets/box-widget.html.twig' with {
                'boxtype' : 'success',
                'solid' : 0,
                'collapsible' : 'widget-box.collapse'|trans ~ '... ',
                'removable' : 'widget-box.remove'|trans ~ '...',
            } %}

                {% import '@SurvosBase/Macros/buttons.html.twig'  as btn %}
                {% block box_title %}Toolkit{% endblock %}
                {% block box_body %}
                    <div class="callout callout-warning">
                            {{ 'site.intro'|trans|u.replaceMatches('/^ +/ims', '')|markdown }}
                    </div>
                {% endblock %}
                {% block box_footer %}
                    <div class="pull-right">
                        {{ btn.link_button('save', '#', 'far fa-save', 'success', 'lg') }}
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>


{% endblock %}
