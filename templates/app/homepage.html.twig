{% extends 'base.html.twig' %}

{% block page_title %}Shakespeare{% endblock %}

{% block page_content %}
    <div class="row">
        <div class="col-md-6">
            {# ... infobox widget, solid background ... #}
            {% embed '@AdminLTE/Widgets/infobox-widget.html.twig'  with {
                'solid' : 'red',
                'icon'  : 'far fa-star',
            } %}

                {% block box_text %}Works{% endblock %}
                {% block progress_description %}
                    The plays and sonnets of Shakespeare
                {% endblock %}
            {% endembed %}

        </div>
        <div class="col-md-6">

            {# ... infobox widget, colored icon ... #}
            {% embed '@AdminLTE/Widgets/infobox-widget.html.twig'  with {
                'color' : 'aqua',
                'icon'  : 'fas fa-comments',
            } %}
                {% block box_text %}{% endblock %}
                {% block box_number %}Characters{% endblock %}
                {% block progress_description %}
                    Works as well without progress bar
                {% endblock %}
            {% endembed %}
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {# ... box widget with defaults ... #}
            {% embed '@AdminLTE/Widgets/box-widget.html.twig' %}

                {% import '@AdminLTE/Macros/buttons.html.twig'  as btn %}
                {% block box_title %}Fountain{% endblock %}
                {% block box_body %}
                    <div class="callout callout-info">
                        Fountain is a pretty slick formatting for theatrical scripts.
                        The real purpose of this site isn't about S
                    </div>
                {% endblock %}
                {% block box_footer %}
                    <div class="pull-right">
                        {{ btn.link_button('save', '#', 'floppy') }}
                    </div>
                {% endblock %}
            {% endembed %}
        </div>

        <div class="col-md-6">
            {# ... box widget with some options ... #}
            {% embed '@AdminLTE/Widgets/box-widget.html.twig' with {
                'boxtype' : 'success',
                'solid' : 0,
                'collapsible' : 'widget-box.collapse'|trans ~ '... ',
                'removable' : 'widget-box.remove'|trans ~ '...',
            } %}

                {% import '@AdminLTE/Macros/buttons.html.twig'  as btn %}
                {% block box_title %}Widget box title{% endblock %}
                {% block box_body %}
                    <div class="callout callout-info">
                       Truth be told, this site isn't about the Bard.
                    </div>
                {% endblock %}
                {% block box_footer %}
                    <div class="pull-right">
                        {{ btn.link_button('save', '#', 'far fa-save', 'success', 'lg') }}
                    </div>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock %}
