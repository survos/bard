{% extends '@SurvosBase/base.html.twig' %}


{% block logo_mini %}<b>Bard</b>{% endblock %}
{% block logo_large 'Shakespeare' %}

{% block page_title 'Shakespeare' %}
{% block page_subtitle 'Works, Characters, and a bunch of cool tools' %}

{% block page_content_before %}
    {% embed '@AdminLTE/Widgets/box-widget.html.twig' %}
        {% block box_title %}Tech Notes{% endblock %}
        {% block box_body %}
            <div class="callout callout-info">
                {{ '%s.notes'|format(app.request.get('_route'))|trans   }}
            </div>
        {% endblock %}
    {% endembed %}

{% endblock %}


    {% block stylesheets %}
        {# always include app?  Or add it to stylesheets block and always call parent?
        #}
        {{ parent() }}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {# always include app?  Or add it to stylesheets block and always call parent?
        #}
        {{ parent() }}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
