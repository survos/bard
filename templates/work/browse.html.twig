{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('works-datatable') }}
{% endblock %}

{% block page_title %}Works{% endblock %}
{% block page_subtitle %}index (via make:crud){% endblock %}

{% block page_content_before %}
    <div class="well-sm">
        {{ "pages.%s"|format(app.request.get('_route'))|trans }}
    </div>
{% endblock %}



{% block body %}



    {# ... box widget with defaults ... #}
    {% embed '@SurvosBase/Widgets/box-widget.html.twig' %}

        {% import '@SurvosBase/Macros/buttons.html.twig'  as btn %}
        {% import '@SurvosBase/macros/cards.html.twig'  as card_widget %}
        {% block box_title %}Shakespeare's Works and Works{% endblock %}
        {% block box_body %}

            {% set api = {
                call: 'api_works_get_collection',
                filter: {}
            } %}

            {% set tableHtml %}
                {{  card_widget.entityTable({
                    id: 'work_table',
                    api: api,
                    class: 'js-work-table'
                })
                }}
            {% endset %}
            {{ tableHtml }}
            {{ tableHtml|e('html') }}


            {{
            card_widget.pane(
                {
                    id: 'work_browse_id',
                    content: tableHtml,
                    slider: 3,
                    api: api,
                    title: '%d Media'|format(555),
                }
            )
            }}
            {% set cardHtml %}
            {% endset %}

            <div class="callout callout-info">
                {{ 0 and block('work_table') }}
            </div>
        {% endblock %}

        {% block box_footer %}
            <div class="pull-left">
                Data from <a target="_blank" href="http://opensourceshakespeare.com/">opensourceshakespeare.com</a>
            </div>

            <div class="pull-right">
                {{ btn.link_button('Works', path('work_index'), 'floppy') }}
                {{ btn.link_button('Works', path('work_index'), 'floppy') }}
            </div>
        {% endblock %}

        {% block work_table %}
            <h3><span id="max">??</span> Works, survos_datatable</h3>
            {% set api_route = 'api_works_get_collection' %}
            <a href="{{ path(api_route) }}">{{ api_route }}</a>

            <table id="work_table" class="xxsurvos-datatable" data-dt-ajax="{{ path(api_route)}}">
            </table>

        {% endblock %}
    {% endembed %}

{% endblock %}
