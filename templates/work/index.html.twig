{% extends 'base.html.twig' %}

{% block title %}Work index{% endblock %}

{% block body %}
    <h1>Work index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>LongTitle</th>
                <th>Year</th>
                <th>Source</th>
                <th>TotalWords</th>
                <th>TotalParagraphs</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for work in works %}
            <tr>
                <td>{{ work.id }}</td>
                <td>{{ work.title }}</td>
                <td>{{ work.longTitle }}</td>
                <td>{{ work.year  }}</td>
                <td>{{ work.source }}</td>
                <td>{{ work.totalWords }}</td>
                <td>{{ work.totalParagraphs }}</td>
                <td>
                    <a href="{{ path('work_show', {'id': work.id}) }}">show</a>
                    <a href="{{ path('work_edit', {'id': work.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('work_new') }}">Create new</a>
{% endblock %}
